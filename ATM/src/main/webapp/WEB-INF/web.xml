<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	<welcome-file-list>
		<welcome-file>
			index.html
		</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>com.atm.application.Login</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/Login</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>AccountCreation</servlet-name>
		<servlet-class>com.atm.application.AccountCreation</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>AccountCreation</servlet-name>
		<url-pattern>/AccountCreation</url-pattern>
	</servlet-mapping>
	
	<context-param>
		<param-name>url</param-name>
		<param-value>jdbc:mysql://localhost:3306/atm</param-value>
	</context-param>
	
	<context-param>
		<param-name>un</param-name>
		<param-value>root</param-value>
	</context-param>
	
	<context-param>
		<param-name>pwd</param-name>
		<param-value>iwtbsdeia99</param-value>
	</context-param>

</web-app>